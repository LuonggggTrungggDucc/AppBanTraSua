<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Trang_chu.Timkiem">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/khung_1"
                android:backgroundTint="#FAFFCA"
                android:padding="10dp"
                android:src="@drawable/ic_path_3391" />

            <EditText
                android:id="@+id/timkiem"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle_5"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:hint="Tìm kiếm"
                android:paddingStart="20dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/tb"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_no_drinks"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Sản phẩm bạn đang tìm ko có hãy thử nhập đúng tên "
            android:layout_height="wrap_content" />


    </LinearLayout>

</FrameLayout>